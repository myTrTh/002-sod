{% extends 'base.html.twig' %}

{% block title %} Добавить ссылку {% endblock %}
{% block header %} Добавить ссылку {% endblock %}
{% block body %}

	<a href="{{ path('content_list', {'type': type}) }}">Назад к ссылкам</a>
	<br>
	{% if error %}
		<div class="message-error">{{ error }}</div>
	{% endif %}<br>
	<form method='post' enctype='multipart/form-data' action='{{ path('content_add', {'type': type}) }}'>
		<label>Заголовок<br><input type='text' name='title' value='{{ lastTitle }}'></label>
		<label>Ссылка<br><input type='text' name='article' value='{{ lastArticle }}'></label>
		<input type='hidden' name='_csrf_token' value='{{ csrf_token() }}'>
		<input type='submit' name='submit_content_add' value='Добавить ссылку'>
	</form>

{% endblock %}