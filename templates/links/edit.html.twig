{% extends 'wide.html.twig' %}

{% block title %} Редактировать ссылку {% endblock %}
{% block header %} Редактировать ссылку {% endblock %}
{% block body %}

	{% set page = getPageNumber() %}
	<a href="{{ path('content_list', {'type': type, 'page': page}) }}">Назад к ссылкам</a>
	<br><br>
	{% if error %}
		<div class="message-error">{{ error }}</div><br>
	{% endif %}

	<form method='post' enctype='multipart/form-data' action='{{ path('content_edit', {'type': type, 'id': content.id }) }}'>
		<label>Ссылка<br><input type='text' name='title' value='{{ content.title }}'></label>
		<label>Описание<br><input type='text' name='article' value='{{ content.article }}'></label>
		<input type="file" name="userfile"><br>
		<input type='hidden' name='_csrf_token' value='{{ csrf_token() }}'>
		<input type='submit' name='submit_content_edit' value='Редактировать ссылку'>
	</form>
	{% if content.image %}
		<br>
		<form method="post" action="{{ path('content_edit', {'type': type, 'id': content.id }) }}">
			<input type='hidden' name='_csrf_token' value='{{ csrf_token() }}'>
			<input type="submit" name="submit_delete_image" value="x">
		</form>
				<div class="content-image">
					<a href="../../public/images/content/{{ type }}/{{ content.image }}" class='swipebox'>
						<img src="../../public/images/content/{{ type }}/{{ content.image }}">
					</a>
				</div>		
	{% endif %}	

{% endblock %}