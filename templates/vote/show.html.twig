{% extends 'base.html.twig' %}

{% block title %} {{ vote.title }} {% endblock %}
{% block header %} {{ vote.title }} {% endblock %}
{% block body %}

	<a href="{{ path('vote_list') }}">Назад к опросам</a>
	<br><br>
		{% if error %}
			<div class="message-error">{{ error }}</div>
		{% endif %}

	<div class="content">
		{% if access == 'close' %}
		<form method='post' enctype='multipart/form-data' action='{{ path('vote_show', {id: vote.id }) }}'>
			{% for option in vote.options %}
				<label>
					<div class='checkbox-line'>
						<input type="radio" name="vote_options" value="{{ option.id }}"> {{ option.title }}
					</div>
				</label>
			{% endfor %}
		{% else %}
			{% for option in vote.options %}			
				<div class="vote-option-result">{{ option.title }} - {{ option.users|length }}
					<div class="vote-option-users">
						{% for user in option.users %}
							{{ user.author.username }}<br>
						{% endfor %}
					</div>
				</div>
			{% endfor %}				
		{% endif %}
		<input type='hidden' name='_csrf_token' value='{{ csrf_token() }}'>		
		<input type="submit" name="submit_vote_set" value="Голосовать">
		</form>
	</div>

{% endblock %}