{% extends 'wide.html.twig' %}

{% block title %} Редактировать историю {% endblock %}
{% block header %} Редактировать историю {% endblock %}
{% block body %}

	{% set page = getPageNumber() %}
	<a href="{{ path('content_list', {'type': type, 'page': page}) }}">Назад к истории</a>
	<br><br>
	{% if error %}
		<div class="message-error">{{ error }}</div><br>
	{% endif %}

	<form method='post' enctype='multipart/form-data' action='{{ path('content_edit', {'type': type, 'id': content.id }) }}'>
		<label>Имя<br><input type='text' name='title' value='{{ content.title }}'></label>
		<label>Описание<br>
		{% include 'bbcode.html.twig' %}
		<textarea name='article'>{{ content.article }}</textarea></label>
		<input type="file" name="userfile"><br>
		<input type='hidden' name='_csrf_token' value='{{ csrf_token() }}'>
		<input type='submit' name='submit_content_edit' value='Редактировать историю'>
	</form>
	{% if content.image %}
		<br>
		<form method="post" action="{{ path('content_edit', {'type': type, 'id': content.id }) }}">
			<input type='hidden' name='_csrf_token' value='{{ csrf_token() }}'>
			<input type="submit" name="submit_delete_image" value="x">
		</form>
		<div class="content-image" >
			<img src="../../public/images/content/{{ type }}/{{ content.image }}">
		</div>			
	{% endif %}	

{% endblock %}